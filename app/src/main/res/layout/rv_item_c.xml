<?xml version="1.0" encoding="utf-8"?>
<!--Card View widget-->
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_catg_h"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:contentPadding="3dp"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@color/white"
    android:layout_margin="3dp"
    >

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.constraintlayout.widget.Guideline
           android:id="@+id/guidline2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           card_view:layout_constraintGuide_percent="0.5"/>

       <androidx.constraintlayout.widget.Guideline
           android:id="@+id/guidline3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           card_view:layout_constraintGuide_percent="0.75"/>

       <androidx.constraintlayout.widget.Guideline
           android:id="@+id/guidline4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           card_view:layout_constraintGuide_percent="0.9"/>

       <ImageView
           android:id="@+id/img_rv_c"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_margin="5dp"
           android:src="@drawable/pythonbook"
           card_view:layout_constraintBottom_toBottomOf="parent"
           card_view:layout_constraintEnd_toStartOf="@+id/guidline"
           card_view:layout_constraintStart_toStartOf="parent"
           card_view:layout_constraintTop_toTopOf="parent" />

       <androidx.constraintlayout.widget.Guideline
           android:id="@+id/guidline"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           card_view:layout_constraintGuide_percent="0.25"/>

       <TextView
           android:id="@+id/txt_name_rv_c"
           android:layout_width="0dp"
           android:fontFamily="@font/literata"
           android:layout_height="0dp"
           android:layout_margin="5dp"
           android:text="Book1"
           android:textStyle="bold"
           android:gravity="bottom|left"
           android:textColor="@color/black"
           android:textSize="19dp"
           card_view:layout_constraintBottom_toTopOf="@+id/guidline2"
           card_view:layout_constraintEnd_toStartOf="@+id/guidline1"
           card_view:layout_constraintStart_toStartOf="@+id/guidline"
           card_view:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/txt_price_rv_c"
           android:layout_width="0dp"
           android:layout_margin="5dp"
           android:fontFamily="@font/literata"
           android:layout_height="0dp"
           android:text="100 Rs"
           android:gravity="left|top"
           android:textColor="@color/black"
           android:textSize="18dp"
           card_view:layout_constraintBottom_toBottomOf="parent"
           card_view:layout_constraintEnd_toStartOf="@+id/guidline1"
           card_view:layout_constraintStart_toStartOf="@+id/guidline"
           card_view:layout_constraintTop_toBottomOf="@+id/guidline2" />

       <androidx.constraintlayout.widget.Guideline
           android:id="@+id/guidline1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           card_view:layout_constraintGuide_percent="0.65"/>

       <ImageView
           android:id="@+id/img_bin_rv_c"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="5dp"
           android:src="@drawable/logo_bin1"
           card_view:layout_constraintEnd_toEndOf="parent"
           card_view:layout_constraintHorizontal_bias="1.0"
           card_view:layout_constraintTop_toTopOf="parent"
           card_view:layout_constraintVertical_bias="0.0" />

       <TextView
           android:id="@+id/txt_sub_rv_c"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:text="-"
           android:layout_margin="5dp"
           android:gravity="center|right"
           android:textSize="25dp"
           android:textStyle="bold"
           android:textColor="@color/black"
           card_view:layout_constraintBottom_toBottomOf="parent"
           card_view:layout_constraintEnd_toStartOf="@+id/guidline3"
           card_view:layout_constraintStart_toStartOf="@+id/guidline1"
           card_view:layout_constraintTop_toTopOf="@+id/guidline2" />

       <TextView
           android:id="@+id/txt_count_rv_c"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:background="@drawable/brown_circle_bacground"
           android:layout_margin="5dp"
           android:gravity="center"
           android:text="1"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:textSize="18dp"
           card_view:layout_constraintBottom_toBottomOf="parent"
           card_view:layout_constraintEnd_toStartOf="@+id/guidline4"
           card_view:layout_constraintStart_toStartOf="@+id/guidline3"
           card_view:layout_constraintTop_toTopOf="@+id/guidline2" />

       <TextView
           android:id="@+id/txt_add_rv_c"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:gravity="center|left"
           android:text="+"
           android:textColor="@color/black"
           android:layout_margin="5dp"
           android:textSize="25dp"
           android:textStyle="bold"
           card_view:layout_constraintBottom_toBottomOf="parent"
           card_view:layout_constraintEnd_toEndOf="parent"
           card_view:layout_constraintStart_toStartOf="@+id/guidline4"
           card_view:layout_constraintTop_toTopOf="@+id/guidline2"
           card_view:layout_constraintVertical_bias="0.0" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
